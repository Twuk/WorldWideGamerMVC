@using WorldWideGamerMVC.ViewModels
@model WorldWideGamerMVC.ViewModels.Game.EditGameViewModel

@{
    ViewBag.Title = "EditGame";
}

<h2>EditGame</h2>

@using (Html.BeginForm("SaveGame", "Game", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.Hidden("GameId", Model.GameId)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Naam, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("Naam", Model.Naam)
            @Html.Label(Model.Naam)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Regels, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Regels, new { @class = "form-control" })
        </div>
    </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
}

<div>
